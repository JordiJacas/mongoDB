      <label for="nombre">Nombre:</label>
      <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
    </div>
    <div class="form-group">
      <label for="competicion">Competicion:</label>
      <input type="text" class="form-control" name="com" placeholder="Competicion" required>
    </div>
    <div class="form-group">
      <label for="c1">Color1:</label>
      <input type="text" class="form-control" name="col1" placeholder="Color 1" required>
    </div>
    <div class="form-group">
      <label for="c2">Color2:</label>
      <input type="text" class="form-control" name="col2" placeholder="Color2" required>
    </div>
    <button type="submit" class="btn btn-primary">Añadir</button>
  </form>
</div>


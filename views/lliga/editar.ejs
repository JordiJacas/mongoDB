      <label for="nombre" class="col-xs-2">Nombre:</label>
      <input type="text" name="nombre" value="<%= equipos.Nombre %>" required>
    </div>
    <div class="form-group">
      <label for="competicion" class="col-xs-2">Competicion:</label>
      <input type="text" name="com" value="<%= equipos.Competicion %>" required>
    </div>
    <div class="form-group">
      <label for="c1" class="col-xs-2">Color1:</label>
      <input type="text" name="col1" value="<%= equipos.Color1 %>" required>
    </div>
    <div class="form-group">
      <label for="c2" class="col-xs-2">Color2:</label>
      <input type="text" name="col2" value="<%= equipos.Color2 %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
  </form>
</div>
<% } %>

